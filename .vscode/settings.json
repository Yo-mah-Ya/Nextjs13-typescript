{
  "files.exclude": {
    "amplify/.config": true,
    "amplify/**/*-parameters.json": true,
    "amplify/**/amplify.state": true,
    "amplify/**/transform.conf.json": true,
    "amplify/#current-cloud-backend": true,
    "amplify/backend/amplify-meta.json": true,
    "amplify/backend/awscloudformation": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "npm-packages-offline-cache": true,
    ".next": true,
    "coverage": true
  },
  "editor.formatOnSave": true,
  "eslint.packageManager": "yarn",
  // "eslint.validate": ["javascript", "typescript"], // No need above or equal to Version 2.0.4
  "eslint.lintTask.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "npm.packageManager": "yarn",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript][typescriptreact][javascript][javascriptreact][json][graphql][vue][markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.packageManager": "yarn",
  "stylelint.validate": ["css", "sass", "scss", "postcss"],
  "[css][less][scss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "cSpell.enabled": true,
  "cSpell.words": [
    "addmissingownerfields",
    "addtimestampfields",
    "avif",
    "awscloudformation",
    "birthdate",
    "breakcirculardependency",
    "browserslist",
    "browserconfig",
    "cleangeneratedmodelsdirectory",
    "clsx",
    "codegen",
    "csstype",
    "emitauthprovider",
    "enableiterativegsiupdates",
    "enablexcodeintegration",
    "enablecaseinsensitivity",
    "enabledartnullsafety",
    "entrypoints",
    "flexbox",
    "flexbugs",
    "fnames",
    "forcealiasattributes",
    "formdata",
    "graphqltransformer",
    "generateindexrules",
    "generategraphqlpermissions",
    "handlelistnullabilitytransparently",
    "hrefs",
    "icss",
    "improvepluralization",
    "Keepalive",
    "msapplication",
    "nocheck",
    "openapi",
    "opensearch",
    "opensearchdescription",
    "pathinfo",
    "preconnect",
    "prefetch",
    "retaincasestyle",
    "secondarykeyasgsi",
    "skipoverridemutationinputtypes",
    "suppressschemamigrationprompt",
    "securityenhancementnotification",
    "showfieldauthnotification",
    "sockjs",
    "stylelint",
    "stylelintrc",
    "tailwindcss",
    "todos",
    "transformerversion",
    "tsbuildinfo",
    "Unauth",
    "unauth",
    "usesubusernamefordefaultidentityclaim",
    "useinclusiveterminology",
    "useenabledmfas",
    "useappsyncmodelgenplugin",
    "usedocsgeneratorplugin",
    "usetypesgeneratorplugin",
    "useexperimentalpipelinedtransformer",
    "usehooks",
    "latestregionsupport",
    "validatetypenamereservedwords",
    "zoneinfo"
  ]
}
